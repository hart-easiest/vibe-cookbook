rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allowed editor emails - REPLACE THESE with your actual allowed emails
    function isAllowedEditor() {
      return request.auth != null &&
             request.auth.token.email in [
               'taladani@gmail.com',
               'eliavschreiber@gmail.com',
               'dschreiber@gmail.com',
               'gidonschreiber@gmail.com'
             ];
    }

    match /recipe-images/{allPaths=**} {
      // Anyone can read images
      allow read: if true;

      // Only allowed users can upload/delete images
      allow write: if isAllowedEditor();
    }
  }
}
