rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allowed editor emails
    function isAllowedEditor() {
      return request.auth != null &&
             request.auth.token.email in [
               'taladani@gmail.com',
               'eliavschreiber@gmail.com',
               'dschreiber@gmail.com',
               'gidonschreiber@gmail.com'
             ];
    }

    match /recipes/{recipeId} {
      // Anyone can read recipes
      allow read: if true;

      // Only allowed users can create, update, or delete recipes
      allow create, update, delete: if isAllowedEditor();
    }
  }
}
